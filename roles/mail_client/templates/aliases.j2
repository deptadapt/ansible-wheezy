{% if groups['mail_server'] %}
{%   set email_alias = hostvars[groups['mail_server'][0]].root_email_alias %}
{% elif mail_root_alias is defined %}
{%   set email_alias = mail_root_alias %}
{% else %}
{%   set email_alias = "root@" + ansible_domain %}
{% endif %}


mailer-daemon: root
postmaster: root
nobody: root
hostmaster: root
usenet: root
news: root
webmaster: root
www: root
ftp: root
abuse: root
noc: root
security: root
root: {{ email_alias }}
logcheck: root
monit: root
