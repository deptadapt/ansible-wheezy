# Unblock dns: {{ firewall_unblock_dns }}
# Unblock monit: {{ firewall_unblock_monit }}

# -A INPUT -p icmp -m icmp --icmp-type 8 -j ACCEPT
-A INPUT -j REJECT
-A FORWARD -j REJECT
-A OUTPUT -j ACCEPT
{% endblock footer %}
