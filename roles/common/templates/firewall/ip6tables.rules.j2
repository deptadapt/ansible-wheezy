{% extends "base.j2" %}
{% block header %}
*filter
-A INPUT -i lo -j ACCEPT
-A INPUT ! -i lo -d ::1/128 -j REJECT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
{% endblock header %}


{% block footer %}
# ip6tables.rules.j2
